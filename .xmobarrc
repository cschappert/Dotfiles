Config { font = "xft:monospace-10"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopSize L 95 19
       , commands = [ Run Weather "RJTT" ["-t"," <tempC>C","-L","15","-H","26","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run BatteryP ["BAT0"] ["-t","Batt: <left>%","-L","15","--low","red","--","-c","energy_full"] 600
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %battery%   <fc=#ee9a00>%date%</fc> | %RJTT%  "
       }
